//------------------------------------------------------------------------------
//  scene_shaders.shd
@uniform_block vsParams Params
mat4 mvp ModelViewProjection
@end

@vs vs
@use_uniform_block vsParams
@in vec4 position
@in vec4 normal
@out vec4 nrm
    _position = mul(mvp, position);
    nrm = normal;
@end

@fs fs
@in vec4 nrm
    _color = vec4(nrm.xyz * 0.5 + 0.5, 1.0);
@end

@program SceneShader vs fs
