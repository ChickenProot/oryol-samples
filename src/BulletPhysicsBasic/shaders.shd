@uniform_block params Params
mat4 mvp ModelViewProjection
@end

@vs vs
@use_uniform_block params
@in vec4 position
@in vec4 normal
@in vec2 texcoord0
@out vec2 uv
@out vec4 nrm
@out vec4 color
    _position = mul(mvp, position);
    uv = texcoord0;
    nrm = normalize(mul(mvp, normal));
    color = vec4((normal.xyz + vec3(1.0)) * vec3(0.5), 1.0);
@end

@fs fs
@in vec2 uv
@in vec4 nrm
@in vec4 color
    _color = color;
@end

@program Shader vs fs

