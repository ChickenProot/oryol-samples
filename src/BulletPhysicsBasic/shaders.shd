@uniform_block params Params
mat4 mvp ModelViewProjection
vec4 inColor Color
@end

@vs vs
@use_uniform_block params
@in vec4 position
@out vec4 color
    _position = mul(mvp, position);
    color = inColor;
@end

@fs fs
@in vec4 color
    _color = color;
@end

@program Shader vs fs

